        var a = document.querySelectorAll(".form-control");
function cng() {

    if (a[0].value == "") {
        return;
    }
    else {
        var list = document.querySelectorAll(".loading")[0].classList;
        if(list[1] == "d-none"){
            list.remove("d-none")
        }

        var result = document.querySelectorAll(".RESULT")

        result.forEach((a, b) => {
            var c = document.querySelectorAll(".form-control");

            const url = "https://api.openai.com/v1/completions";

            var aa =
            {
                headers: {
                    "content-Type": "application/json",
                    'Accept': 'application/json',
                    "Authorization": "Bearer <OPENAI_API>"
                },
                method: "POST",
                body: JSON.stringify({ 
                    prompt:`Get top 3 udemy,coursera,youtube and google course with course link for this topic.  
                    Please generate a JSON list object with the following properties: q and a. q and a should be string. q is the question. a is the answer. The URL is: ${c[0].value}`, 
                    max_tokens: 200,
                    temperature: 0.9,
                    top_p: 1,
                    frequency_penalty: 0,    
                    model: "text-davinci-003",   
                })
            }

            fetch(url, aa).then((res) => {
                return res.json();
            }).then((data) => {
                a.innerText = data.choices[0].text.replace(/\s/g,' ');
                var list = document.querySelectorAll(".loading")[0].classList;
                list.add("d-none")
                document.querySelectorAll(".datas")[0].classList.remove("d-none")
                console.log(b)
                
            }).catch((err) => {
                console.log(err);
            })

        })


    }
}


function cpy(x , y){
    var ele = document.querySelectorAll(".RESULT")[x];
    navigator.clipboard.writeText(ele.innerText);
    var icons = document.querySelectorAll(".bi");
    console.log(icons[y].classList[1])
    icons[y].classList.remove("bi-clipboard");
    icons[y].classList.add("bi-clipboard-check");
}



